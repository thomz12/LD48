<?xml version='1.0' encoding='utf-8'?>
<widget id="com.thomz12.debtcollector" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Debt Collector</name>
    <description>
        Ludum Dare 48 game. Created in 72 hours by Mathijs Koning and Thom Zeilstra.
    </description>
    <author email="thomz12@hotmail.nl" href="https://github.com/thomz12">
        Thom Zeilstra
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
